<% provide(:title, 'Platillos') %>
<div class="center hero-unit">
	<h1>Lista de platillos</h1>

	<br/>
	
	<table id="co_table" class="table table-bordered table-hover tablesorter">
		<thead>
		<tr>
			<th>Id</th>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Categoria</th>
			<th>Imagen</th>
			<th>Editar</th>
			<th>Borrar</th>
		</tr>
		</thead>
		<tbody>	
			<% @courses.each do |course| %>
			  <tr>
				<td><%= course.id %></td>
				<td><%= course.name %></td>
			    <td>$<%= course.price %>.00</td>
			    <td><%= Category.find(course.category_id).name %></td>
				<% if course.image == '' %>
					<td><%= image_tag("nfound.png", alt: course.name) %></td>
				<% else %>
					<td><%= image_tag(course.image, alt: 'Course') %></td>
				<% end %>
			    <td><%= link_to image_tag("edit.png", alt: 'Editar'), edit_course_path(course) %></td>
			    <td><%= link_to image_tag("delete.png", alt: 'Borrar'), course, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'Nuevo Platillo', new_course_path , class: "justify"%>

	<br />
</div>
