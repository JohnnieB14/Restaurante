<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name, "Nombre" %>
		<%= f.text_field :name %>

		<%= f.label :surname, "Apellido" %>
		<%= f.text_field :surname %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "ConfirmaciÃ³n" %>
		<%= f.password_field :password_confirmation %>

		<%= f.label :privileges %>
		<% if @my.privileges == -1 %>	
			<%= f.select(:privileges , options_for_select([['Administrador', -1], ['Supervisor', 0], ['Mesero', 1], ], @user.privileges), { :include_blank => true}) %>
		<% elsif @my.privileges == 0 %>	
			<%= f.select(:privileges , options_for_select([['Supervisor', 0], ['Mesero', 1], ], @user.privileges), { :include_blank => true}) %>
		<%end%>
		
		<%= f.submit "Enviar", class: "btn btn-large signup_btn center" %>
		<% end %>
	</div>
</div>