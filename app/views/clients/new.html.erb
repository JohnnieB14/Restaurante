<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@client) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name, "Nombre" %>
		<%= f.text_field :name %>

		<%= f.label :surname, "Apellido" %>
		<%= f.text_field :surname %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "ConfirmaciÃ³n" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Registrate", class: "btn btn-large signup_btn" %>
		<% end %>
	</div>
</div>