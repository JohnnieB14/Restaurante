<% provide(:title, 'Categorias') %>
<div class="center hero-unit">
	<h1>Lista de categorias</h1>

	<br/>
	
	<table class="table table-bordered table-hover">
		<thead>
		<tr>
			<th>Id</th>
			<th>Categoria</th>
			<th>Imagen</th>
			<th>Editar</th>
			<th>Borrar</th>
		</tr>
		</thead>
		<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.id %></td>
			<td><%= category.name %></td>
			<% if category.image == '' %>
				<td><%= image_tag("nfound.png", alt: category.name) %></td>
			<% else %>
				<td><%= image_tag(category.image, alt: category.name) %></td>
			<% end %>
			<td><%= link_to image_tag("edit.png", alt: 'Editar'), edit_category_path(category) %></td>
			<td><%= link_to image_tag("delete.png", alt: 'Borrar'), category, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
		</tr>
		<% end %>
		</tbody>
	</table>

	<br />

	<%= link_to 'Nueva Categoria', new_category_path %>   
</div>


