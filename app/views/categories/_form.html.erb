<div class="row">
	<div class="span6 offset3">
		<%= form_for(@category) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name, "Nombre" %>
		<%= f.text_field :name %>

		<%= f.label :image, "Imagen" %>
		<%if @category.image.nil? == false%>
			<% if @category.image.empty? == false%>
				<%= f.text_field :image %>
			<% else %>
				<%= f.text_field :image, value: 'categories/'%>
			<% end %>
		<% else %>
			<%= f.text_field :image, value: 'categories/' %>
		<% end %>
		
		<%= f.submit "Enviar", class: "btn btn-large signup_btn" %>
		<% end %>
	</div>
</div>

