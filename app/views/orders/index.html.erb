<% provide(:title, 'Ordenes') %>
<div class="center hero-unit">
	<h1>Lista de ordenes</h1>

	<br/>
	
	<table class="table table-bordered table-hover">
		<thead>
		<tr>
			<th>Id</th>
			<th>Mesa</th>
			<th>Platillo</th>
			<th>Cliente</th>
			<th>Pagado</th>
			<th>Hora Pedido</th>
		</tr>
		</thead>
		<tbody>	
			<% @orders.each do |order| %>
			  <tr>
				<td><%= order.id %></td>
				<td><%= order.course_id %></td>
			    <td><%= order.table_id %></td>
			    <td><%= order.client_id %></td>
			    <td><%= order.paid %></td>
			    <td><%= order.request_time %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
</div>
