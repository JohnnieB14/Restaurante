			<th>Mesero</th>
			<th>Editar</th>
			<th>Borrar</th>
		</tr>
		</thead>
		<tbody>	
			<% @tables.each do |table| %>
			  <tr>
				<td><%= table.id %></td>
				<td><%= table.code %></td>
