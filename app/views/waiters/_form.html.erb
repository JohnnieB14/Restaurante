<div class="row">
	<div class="span6 offset3">
		<%= form_for(@waiter) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name, "Nombre" %>
		<%= f.text_field :name %>

		<%= f.label :surname, "Apellido" %>
		<%= f.text_field :surname %>

		<%= f.submit "Enviar", class: "btn btn-large signup_btn center" %>
		<% end %>
	</div>
</div>
