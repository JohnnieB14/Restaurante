<% provide(:title, 'Meseros') %>
<div class="center hero-unit">
	<h1>Lista de meseros</h1>

	<br/>
	
	<table id="wa_table" class="table table-bordered table-hover tablesorter">
		<thead>
		<tr>
			<th>Id</th>
			<th>Nombre</th>
			<th>Apellido</th>
			<th>Editar</th>
			<th>Borrar</th>
		</tr>
		</thead>
		<tbody>	
			<% @waiters.each do |waiter| %>
			  <tr>
				<td><%= waiter.id %></td>
			  	<td><%= waiter.name %></td>
			    <td><%= waiter.surname %></td>
			    <td><%= link_to image_tag("edit.png", alt: 'Editar'), edit_waiter_path(waiter) %></td>
			    <td><%= link_to image_tag("delete.png", alt: 'Borrar'), waiter, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<br />
	
	<%= link_to 'Nuevo Mesero', new_waiter_path %>

</div>